<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wmcalyj.point24.UserInputActivity">

    <TextView
        android:id="@+id/user_input_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/user_input_instruction"
        android:textSize="12sp"/>
    <LinearLayout
        android:id="@+id/user_intput_nums"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_instruction"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/user_input_num_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="50sp"/>
        <EditText
            android:id="@+id/user_input_num_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="50sp"/>
        <EditText
            android:id="@+id/user_input_num_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="50sp"/>
        <EditText
            android:id="@+id/user_input_num_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:elegantTextHeight="true"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="50sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/user_input_buttons_tier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_intput_nums">

        <Button
            android:id="@+id/user_input_check_answer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/check_user_input_answer"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/user_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user_input_check_answer_button"
            android:layout_alignParentEnd="true"
            android:text="@string/clear_user_input"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/user_input_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/user_input_check_answer_button"
            android:layout_toLeftOf="@id/user_input_clear"
            android:layout_toRightOf="@id/user_input_check_answer_button"
            android:gravity="center_horizontal"
            android:textSize="30sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <include layout="@layout/numbers_no_signs"/>
    </RelativeLayout>

</LinearLayout>
