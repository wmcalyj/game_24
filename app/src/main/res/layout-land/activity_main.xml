<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wmcalyj.point24.MainActivity">

    <LinearLayout
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@+id/all_buttons">
        <ImageView
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/card1"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/card2"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/card4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/card3"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/includeFaceCardsInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/level1"
        android:text="@string/include_face_cards_instruction"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/answerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/includeFaceCardsInstruction"
        android:text="@string/answer_title"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/answerEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/answerTextView"
        android:layout_toRightOf="@id/answerTextView"
        android:textSize="18sp"/>


    <LinearLayout
        android:id="@+id/all_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answerEditText"
            android:layout_weight="1"
            android:text="@string/check_result"/>
        <Button
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answerEditText"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="@string/next_question"/>

        <Button
            android:id="@+id/seeAnswerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/answerEditText"
            android:layout_weight="1"
            android:text="@string/see_answer"/>
    </LinearLayout>


    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/answerTextView"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/userResultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/resultView"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toRightOf="@id/resultView"
        android:layout_weight="1"
        android:textSize="30sp"/>

</RelativeLayout>